#Perímetro e Área do Triângulo

atri = float(input("Digite a medida para um dos lados do triângulo (em cm): "))
btri = float(input("Digite a medida para um dos lados do triângulo (em cm): "))
ctri = float(input("Digite a medida para um dos lados do triângulo (em cm): "))

ptriangulo = atri + btri + ctri

print(f"O perímetro do triângulo é: {ptriangulo:.2f}cm")

basetri = float(input("Digite a medida da base do triângulo (em cm): "))
htri = float(input("Digite a medida da altura do triângulo (em cm): "))

atriangulo = (basetri*htri)/2

print(f"A área do triângulo é: {atriangulo:.2f}cm")

#Perímetro e Àrea do Quadrado

lqua = float(input("Digite a medida do lado do quadrado (em cm): "))
pqua = lqua*4

print(f"O perímetro do quadrado é: {pqua:.2f}cm")

aqua = lqua ** 2
print(f"A área do quadrado é: {aqua:.2f}cm")

#Perímetro e Àrea do Retângulo

aret = float(input("Digite a medida de um dos lados do retângulo (em cm): "))
bret = float(input("Digite a medida de um dos lados do retângulo (em cm): "))

pretangulo = (2*aret) + (2*bret)
print(f"O perímeto do retângulo é: {pretangulo:.2f}cm")

aretangulo = aret*bret
print(f"A área do retângulo é: {aretangulo:.2f}cm")

#Perímetro e Àrea do Paralelogramo

apara = float(input("Digite a medida de um dos lados do paralelogramo (em cm): "))
bpara = float(input("Digite a medida do outro lado do paralelogramo (em cm): "))

pparalelogramo = (2*apara) + (2*bpara)
print(f"O perímetro do paralelogramo é: {pparalelogramo:.2f}cm")

baseparalelogramo = float(input("Digite a medida da base do paralelogramo (em cm): "))
alturaparalelogramo = float(input("Digite a medida da altura do paralelogramo (em cm): "))

areaparalelogramo = baseparalelogramo * alturaparalelogramo

print(f"A área do paralelogramo é: {areaparalelogramo:.2f}cm")

#Perímetro e Àrea do Losango

llosango = float(input("Digite a medida do lado do losango (em cm): "))
plosango = 4*llosango

print(f"O perímetro do losango é: {plosango:.2f}cm")

dlosango1 = float(input("Digite a medida da menor diagonal do losango (em cm): "))
dlosango2 = float(input("Digite a medida da maior diagonal do losango (em cm): "))

alosango = (dlosango1*dlosango2)/2
print(f"A área do losango é: {alosango:.2f}cm ")

#Perímetro e Àrea do Trapézio

btrapezio1 = float(input("Digite a medida da base menor do trapezio (em cm): "))
btrapezio2 = float(input("Digite a medida da base maior do trapezio (em cm): "))
ltrapezio1 = float(input("Digite a medida de um dos lados do trapezio (em cm): "))
ltrapezio2 = float(input("Digite a medida do outro lado do trapezio (em cm): "))
htrapezio = float(input("Digite a medida da altura do trapezio (em cm): "))

ptrapezio = btrapezio1 + btrapezio2 + ltrapezio1 + ltrapezio2
print(f"O perímetro do trapézio é: {ptrapezio:.2f}cm")

atrapezio = ((btrapezio1 + btrapezio2) / 2 ) * htrapezio

print(f"A área do trapézio é: {atrapezio:.2f}cm ")

